/* components/marketing/index.wxss */

/*列项*/
.seleban {
  width: 710rpx;
  height: 217rpx;
  background: #FFFFFF;
  box-shadow: 2px 4px 10px 1px rgba(255, 82, 36, 0.2);
  border-radius: 20px;
  margin: 0 auto;
  margin-top: 21rpx;
}

.seleban>text {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
  padding: 20rpx 0 0 20rpx;
}

.sebitem-1 {
  display: flex;
  margin-top: 12rpx;
  justify-content: space-around;
  align-items: center;
  margin-top: 39rpx;

}

.sebitem {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.sebitem image {
  width: 64rpx;
  height: 64rpx;
}

.sebitem .sebitem-info {
  height: 20rpx;
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
  margin-top: 20rpx;
  text-align: center;
}